<policies>
  <inbound>
    <base />
    <set-backend-service backend-id="${backend-id}" />
    <!-- Append `api/` to the path before invoking the backend -->
    <rewrite-uri template='@(System.String.Concat("api/", context.Request.Url.Path))' />
    <cors>
      <allowed-origins>
          <origin>*</origin>
      </allowed-origins>
      <allowed-methods>
          <method>*</method>
      </allowed-methods>
      <allowed-headers>
          <header>*</header>
      </allowed-headers>
      <expose-headers>
          <header>*</header>
      </expose-headers>
    </cors>
  </inbound>
  <outbound>
    <base />
  </outbound>
  <backend>
    <base />
  </backend>
  <on-error>
    <base />
  </on-error>
</policies>
