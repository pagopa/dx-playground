<policies>
    <inbound>
        <base />
        <set-backend-service backend-id="${backend-id}" />
        <!-- Append base-path, if defined, before invoking the backend -->
        <choose>
            <when condition="@(System.String.IsNullOrEmpty(&quot;${base-path}&quot;))"></when>
            <otherwise>
                <rewrite-uri template="@(System.String.Concat(&quot;${base-path}/&quot;, context.Request.Url.Path))" />
            </otherwise>
        </choose>
        <cors>
            <allowed-origins>
                <origin>*</origin>
            </allowed-origins>
            <allowed-methods>
                <method>*</method>
            </allowed-methods>
            <allowed-headers>
                <header>*</header>
            </allowed-headers>
            <expose-headers>
                <header>*</header>
            </expose-headers>
        </cors>
    </inbound>
    <outbound>
        <base />
    </outbound>
    <backend>
        <base />
    </backend>
    <on-error>
        <base />
    </on-error>
</policies>
