{
  "name": "azure-function-v3",
  "version": "0.3.2",
  "type": "module",
  "private": true,
  "main": "./dist/main.js",
  "dependencies": {
    "@azure/functions": "^3.5.1",
    "@opentelemetry/api": "^1.9.0",
    "@pagopa/azure-tracing": "catalog:",
    "@pagopa/express-azure-functions": "^4.0.1",
    "@pagopa/ts-commons": "catalog:",
    "@to-do/azure-adapters": "workspace:^",
    "@to-do/domain": "workspace:^",
    "express": "^4.22.1",
    "fp-ts": "catalog:",
    "io-ts": "catalog:"
  },
  "devDependencies": {
    "@pagopa/eslint-config": "catalog:",
    "@pagopa/typescript-config-node": "workspace:^",
    "@types/express": "catalog:",
    "azure-functions-core-tools": "catalog:",
    "esbuild": "catalog:",
    "eslint": "catalog:",
    "prettier": "catalog:",
    "shx": "catalog:",
    "typescript": "catalog:"
  },
  "scripts": {
    "clean": "shx rm -rf ./dist ./out",
    "build": "tsc",
    "build:artifact": "esbuild index=dist/main.js --bundle --format=esm --platform=node --target=node20 --packages=external --outdir=out --allow-overwrite",
    "typecheck": "tsc --noemit",
    "lint": "eslint src --fix",
    "lint:check": "eslint src",
    "start": "func start",
    "start:artifact": "func start out/index.js"
  },
  "files": [
    "**/function.json",
    "dist",
    "host.json"
  ]
}
