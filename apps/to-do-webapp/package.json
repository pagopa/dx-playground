{
  "name": "to-do-webapp",
  "version": "0.1.0",
  "private": true,
  "main": "dist/server.js",
  "scripts": {
    "clean": "shx rm -rf out/",
    "dev": "next dev --turbopack",
    "build": "next build && yarn standalone:copy && yarn standalone:clean && yarn standalone:rename",
    "start": "next start",
    "lint": "next lint",
    "standalone:copy": "shx mkdir tmp_dir && shx cp -r .next/standalone/apps/to-do-webapp/.next/* tmp_dir && shx mkdir dist && shx cp .next/standalone/apps/to-do-webapp/server.js dist",
    "standalone:clean": "shx rm -rf .next",
    "standalone:rename": "shx mv tmp_dir .next"
  },
  "files": [
    ".next"
  ],
  "dependencies": {
    "next": "15.1.2",
    "react": "^19.0.0",
    "react-dom": "^19.0.0"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3",
    "@pagopa/typescript-config-react": "workspace:^",
    "@types/node": "^20",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "eslint": "^9",
    "eslint-config-next": "15.1.2",
    "shx": "^0.3.4",
    "typescript": "^5.7.2"
  }
}
