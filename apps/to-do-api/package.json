{
  "name": "to-do-api",
  "version": "0.9.3",
  "type": "module",
  "private": true,
  "description": "Azure Function REST API for To Do List",
  "license": "MIT",
  "main": "./dist/main.js",
  "scripts": {
    "clean": "shx rm -rf ./dist ./out ./src/generated",
    "build": "tsc",
    "build:artifact": "esbuild index=dist/main.js --bundle --format=esm --platform=node --target=node20 --packages=external --outdir=out --allow-overwrite",
    "typecheck": "tsc --noemit",
    "lint": "eslint src --fix",
    "lint:check": "eslint src",
    "lint:api": "sh api-lint.sh",
    "generate": "gen-api-models --api-spec ./docs/openapi.yaml --no-strict --out-dir ./src/generated/definitions/internal && ts2esm ./tsconfig.json",
    "start": "func start",
    "start:artifact": "func start out/index.js",
    "test": "vitest",
    "test:coverage": "vitest --coverage",
    "infra:generate": "pnpm dlx tsx src/opex.ts"
  },
  "dependencies": {
    "@azure/functions": "catalog:",
    "@pagopa/azure-tracing": "catalog:",
    "@pagopa/handler-kit": "catalog:",
    "@pagopa/handler-kit-azure-func": "catalog:",
    "@pagopa/ts-commons": "catalog:",
    "@to-do/azure-adapters": "workspace:^",
    "@to-do/domain": "workspace:^",
    "cdktf": "catalog:",
    "cdktf-monitoring-stack": "workspace:^",
    "constructs": "catalog:",
    "fp-ts": "catalog:",
    "io-ts": "catalog:",
    "opex-common": "workspace:^",
    "ulid": "catalog:"
  },
  "devDependencies": {
    "@pagopa/eslint-config": "catalog:",
    "@pagopa/openapi-codegen-ts": "catalog:",
    "@pagopa/typescript-config-node": "workspace:^",
    "@types/node": "catalog:",
    "@vitest/coverage-v8": "catalog:",
    "azure-functions-core-tools": "catalog:",
    "esbuild": "catalog:",
    "eslint": "catalog:",
    "prettier": "catalog:",
    "shx": "catalog:",
    "swagger-cli": "catalog:",
    "ts2esm": "catalog:",
    "typescript": "catalog:",
    "vitest": "catalog:",
    "vitest-mock-extended": "catalog:"
  }
}
