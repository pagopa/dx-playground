{
  "name": "to-do-api",
  "version": "0.5.2",
  "type": "module",
  "description": "Azure Function REST API for To Do List",
  "license": "MIT",
  "main": "./dist/main.js",
  "scripts": {
    "clean": "shx rm -rf ./dist ./out",
    "build": "tsc",
    "build:artifact": "esbuild index=dist/main.js --bundle --format=esm --platform=node --target=node20 --packages=external --outdir=out --allow-overwrite",
    "typecheck": "yarn build --noemit",
    "lint": "eslint src --fix",
    "lint:check": "eslint src",
    "lint:api": "sh api-lint.sh",
    "generate": "gen-api-models --api-spec ./docs/openapi.yaml --no-strict --out-dir ./src/generated/definitions/internal",
    "start": "func start",
    "start:artifact": "func start out/index.js",
    "test": "vitest",
    "test:coverage": "vitest --coverage"
  },
  "dependencies": {
    "@azure/cosmos": "^4.2.0",
    "@azure/functions": "^4.6.1",
    "@azure/identity": "^4.5.0",
    "@azure/monitor-opentelemetry": "^1.8.1",
    "@azure/monitor-opentelemetry-exporter": "^1.0.0-beta.28",
    "@azure/opentelemetry-instrumentation-azure-sdk": "^1.0.0-beta.7",
    "@opentelemetry/api": "^1.9.0",
    "@opentelemetry/auto-instrumentations-node": "^0.56.0",
    "@opentelemetry/instrumentation": "^0.57.1",
    "@opentelemetry/instrumentation-undici": "^0.10.0",
    "@opentelemetry/resources": "^1.30.1",
    "@opentelemetry/sdk-metrics": "^1.30.1",
    "@opentelemetry/sdk-trace-base": "^1.30.1",
    "@opentelemetry/semantic-conventions": "^1.28.0",
    "@pagopa/handler-kit": "^1.1.0",
    "@pagopa/handler-kit-azure-func": "^2.0.7",
    "@pagopa/ts-commons": "^13.1.2",
    "applicationinsights": "^3.5.0",
    "azure-functions-otel-instrumentation": "workspace:^",
    "fp-ts": "^2.16.9",
    "io-ts": "^2.2.22",
    "ulid": "^2.3.0"
  },
  "devDependencies": {
    "@pagopa/eslint-config": "^4.0.1",
    "@pagopa/openapi-codegen-ts": "^14.0.0",
    "@pagopa/typescript-config-node": "workspace:^",
    "@types/node": "^22.13.1",
    "@vitest/coverage-v8": "^2.1.8",
    "azure-functions-core-tools": "^4.0.6821",
    "esbuild": "^0.24.2",
    "eslint": "^8.57.1",
    "prettier": "^3.4.2",
    "shx": "^0.3.4",
    "swagger-cli": "^4.0.4",
    "typescript": "^5.7.2",
    "vitest": "^2.1.8",
    "vitest-mock-extended": "^2.0.2"
  }
}
