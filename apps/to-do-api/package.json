{
  "name": "to-do-api",
  "version": "0.9.2",
  "type": "module",
  "private": true,
  "description": "Azure Function REST API for To Do List",
  "license": "MIT",
  "main": "./dist/main.js",
  "scripts": {
    "clean": "shx rm -rf ./dist ./out ./src/generated",
    "build": "tsc",
    "build:artifact": "esbuild index=dist/main.js --bundle --format=esm --platform=node --target=node20 --packages=external --outdir=out --allow-overwrite",
    "typecheck": "tsc --noemit",
    "lint": "eslint src --fix",
    "lint:check": "eslint src",
    "lint:api": "sh api-lint.sh",
    "generate": "gen-api-models --api-spec ./docs/openapi.yaml --no-strict --out-dir ./src/generated/definitions/internal && ts2esm ./tsconfig.json",
    "start": "func start",
    "start:artifact": "func start out/index.js",
    "test": "vitest",
    "test:coverage": "vitest --coverage",
    "opex:build": "cdktf synth",
    "opex:plan": "cdktf plan",
    "opex:deploy": "cdktf deploy --auto-approve"
  },
  "dependencies": {
    "@azure/functions": "^4.7.2",
    "@cdktf/provider-azurerm": "^14.2.0",
    "@pagopa/azure-tracing": "^0.4.0",
    "@pagopa/handler-kit": "^1.1.0",
    "@pagopa/handler-kit-azure-func": "^2.0.7",
    "@pagopa/ts-commons": "^13.1.2",
    "@to-do/azure-adapters": "workspace:^",
    "@to-do/domain": "workspace:^",
    "cdktf-monitoring-stack": "workspace:*",
    "fp-ts": "^2.16.10",
    "io-ts": "^2.2.22",
    "opex-common": "workspace:*",
    "ulid": "^3.0.0"
  },
  "devDependencies": {
    "@pagopa/eslint-config": "^4.0.5",
    "@pagopa/openapi-codegen-ts": "^14.0.0",
    "@pagopa/typescript-config-node": "workspace:^",
    "@types/node": "^22.15.14",
    "@vitest/coverage-v8": "^3.1.4",
    "azure-functions-core-tools": "^4.0.7317",
    "cdktf-cli": "^0.21.0",
    "esbuild": "^0.25.4",
    "eslint": "8.57.1",
    "prettier": "^3.5.3",
    "shx": "^0.4.0",
    "swagger-cli": "^4.0.4",
    "ts2esm": "^2.2.7",
    "typescript": "^5.8.3",
    "vitest": "^3.1.4",
    "vitest-mock-extended": "^3.1.0"
  }
}
