{
  "name": "@pagopa/opex-dashboard-ts",
  "version": "1.0.0",
  "description": "Generate standardized PagoPA's Operational Excellence dashboards from OpenApi specs using TypeScript and CDKTF",
  "main": "dist/index.js",
  "bin": "dist/cli/index.js",
  "scripts": {
    "build": "tsc",
